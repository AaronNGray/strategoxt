      )
    ))

strategies

  strc-back-end =
    log-timed(
      strc-lift-definitions
      ; fc2(|"Stratego-Core", "be-lift")
      ; strc-canonicalize-ng
      ; fc2(|"Stratego-Core", "be-can")
      ; strc-simplify1
      ; fc3(|"Stratego-Core", "be-sim")
