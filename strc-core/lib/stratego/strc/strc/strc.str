      ; strc-combine-sections			; fc3(|"Stratego-Sugar-1", "fe-comb")   // global reorganization
      ; strc-variables-to-constructors		; fc3(|"Stratego-Sugar-1", "fe-vtc")	// global analysis

      ; strc-raise-annotations			; fc2(|"Stratego-Sugar-2", "fe-ra1")    // local
      ; strc-define-lrules			; fc3(|"Stratego-Sugar-2", "fe-dlr")    // local
      ; strc-lift-dynamic-rules								// semi-local
      ; strc-stratego-desugar								// local
      ; strc-raise-annotations			; fc2(|"Stratego-Sugar-3", "fe-ra2")	// local

      ; strc-use-def									// local analysis (earlier)
      ; strc-check-constructors			; fc4(|"Stratego-Sugar-3", "fe-cc")	// global analysis (earlier)

      ; strc-expand-overlays			; fc3(|"Stratego-Sugar-3", "fe-eo")     // global
      ; strc-rules-to-sdefs			; fc3(|"Stratego-Sugar-3", "fe-rts")    // local
      ; strc-desugar-list-matching		; fc2(|"Stratego-Sugar-4", "fe-dlm")    // local
      ; strc-desugar-default-vardec		; fc3(|"Stratego-Sugar-4", "fe-ddv")    // local
      ; strc-introduce-congdefs			; fc3(|"Stratego-Sugar-4", "fe-cdf")    // global
      ; strc-rename-vars			; fc3(|"Stratego-Sugar-4", "fe-rnv")    // local (?)
      ; strc-desugar 				; fc2(|"Stratego-Sugar-5", "fe-des")    // local

      ; strc-if-lib(strc-extract-all, strc-extract)	; fc3(|"Stratego-Sugar-5", "fe-extr")// global
      ; strc-stratego-warnings			; fc5(|"Stratego-Sugar-5", "fe-warn")   // local (earlier)
      ; strc-rename-defs			; fc3(|"Stratego-Sugar-5", "fe-rnd")    // local
      ; strc-simplify1				; fc3(|"Stratego-Sugar-Cong", "fe-sim") // global analysis
      ; strc-define-congruences			; fc1(|"Stratego-Core", "fe-cong")
      ; strc-output-frontend				
    | "Front-end succeeded"
    , 1
    )

  strc-front-end-with-libstrc =
    log-timed(
      strc-get-infile
      ; strc-pack-stratego			; fc1(|"Stratego-Sugar-Cong", "pack")
      ; strc-output-ast
      //; strc-lib-frontend
      ; read-from
