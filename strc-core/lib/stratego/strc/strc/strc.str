    comp(|"pack-stratego",<concat> [
          <strc-dep-name>, <strc-get-include-dirs>, <pass-keep>,
	  <get-config < !["--asfix"] + ![]> "--asfix",
	  <get-config < !["--format-check", <int-to-string>] + ![]> "--format-check",
	  <get-config < !["--prefer-str"] + ![]> "--prefer-str"
    ])


  strc-pre-desugar		= comp(|"pre-desugar")
  strc-repair-types		= comp(|"repair-types")
  strc-combine-sections		= comp(|"combine-sections")
  strc-variables-to-constructors= comp(|"variables-to-constructors")
  strc-raise-annotations	= comp(|"raise-annotations")
  strc-define-lrules		= comp(|"define-lrules")
  strc-lift-dynamic-rules	= comp(|"lift-dynamic-rules")
  strc-stratego-desugar		= comp(|"stratego-desugar")
  strc-use-def			= comp(|"use-def", <strc-pass-maybe-unbound-warnings>)
  strc-check-constructors	= comp(|"check-constructors")
  strc-expand-overlays		= comp(|"expand-overlays")
  strc-rules-to-sdefs		= comp(|"rules-to-sdefs")
  strc-desugar-list-matching	= comp(|"desugar-list-matching")
  strc-desugar-default-vardec	= comp(|"desugar-default-vardec")
  strc-introduce-congdefs	= comp(|"introduce-congdefs")
  strc-rename-vars		= comp(|"rename-vars")
  strc-desugar			= comp(|"desugar")
  strc-extract-all		= comp(|"extract-all")
  strc-extract			= comp(|"extract")
  strc-stratego-warnings	= comp(|"stratego-warnings", <pass-warnings>)
  strc-rename-defs		= comp(|"rename-defs")
  strc-simplify1		= comp(|"simplify1")
  strc-define-congruences	= comp(|"define-congruences")

  strc-lib-frontend =
    comp(|"frontend", <concat>[<strc-pass-main>, <pass-warnings>, <strc-pass-library>])

  strc-pass-main =
    !["--main", <get-config> "-m"] <+ ![]

// OPTIMIZER

  strc-fusion			= comp(|"fusion")
  strc-do-inline 		= comp(|"inline")
  strc-dead-def-elim		= comp(|"dead-def-elim", <strc-if-lib(!["--only-local"],![])>)
  strc-compile-match		= comp(|"compile-match")
  strc-desugar-case 		= comp(|"desugar-case")
  strc-const-prop 		= comp(|"const-prop")
  strc-bound-unbound-vars 	= comp(|"bound-unbound-vars")
  strc-dead-var-elim		= comp(|"dead-var-elim")
  strc-worker-wrapper		= comp(|"worker-wrapper")
  strc-simplify2 		= comp(|"simplify2")
  strc-simplify3 		= comp(|"simplify3")
  strc-canonicalize 		= comp(|"canonicalize")
  strc-canonicalize-ng		= comp(|"canonicalize-ng")
  strc-lift-definitions 	= comp(|"lift-definitions")
  strc-bound-unbound-vars 	= comp(|"bound-unbound-vars")
  strc-escaping-variables 	= comp(|"escaping-variables")

// EXPORT

  strc-defs-to-external-defs = comp(|"defs-to-external-defs", ["--no-inlining"])

