	    strc-worker-wrapper
            ; save-as6(!".opt2")
	    ; strc-do-inline
            ; save-as6(!".opt3")
	    ; strc-dead-def-elim
            ; save-as4(!".opt4")
	    ; strc-simplify1
          )
        //; define-congruences
	// CONSTANT PROPAGATION
        //; olevel5( 
	//    const-prop
	//    ; bound-unbound-vars
	//    ; dead-var-elim
	//    ; simplify3
        //    ; save-as4(!".opt4")
        //  )
	// PATTERN MATCH COMPILATION
        ; olevel3( 
	    strc-compile-match
	    ; strc-desugar-case
            ; save-as2(!".opt5")
	  )
	// INLINING 
        // inline local definitions introduced by pattern match compilation
        ; olevel5(
	   strc-do-inline
           ; save-as5(!".opt7")
	   ; strc-dead-def-elim
           ; save-as5(!".opt8")
          )
	// CONSTANT PROPAGATION
        //; olevel4(
	//    simplify2 // lift term arguments from (prim) calls
        //    ; save-as3(!".opt9")
        //    ; const-prop
	//    ; save-as3(!".opt10")
	//    ; bound-unbound-vars
	//    ; save-as3(!".opt11")
	//    ; dead-var-elim
	//    ; simplify3
        //    ; save-as3(!".opt12")
	//  )
    | <concat-strings>["Optimization succeeded -O ",<get-config; int-to-string>"-O"]
    , 1
    )

strategies

  strc-export-external-defs =
    strc-if-lib(where(
      log-timed(
        strc-defs-to-external-defs
	; where(
	    <not(eq)>(<get-config>"baseout",<get-config>"basein")
	    <+ <get-config>"baseout"
	       ; debug(!"name for library same as name for base file: ")
	       ; fail
          )
        ; copy-to(strc-getoutfile(!".rtree") => file1)
	; log(|Info(), ["Abstract syntax in '", file1, "'"])

        ; xtc-transform(!"pp-stratego", !["--abstract" | <pass-verbose> ] )
        ; copy-to(strc-getoutfile(!".str") => file2)
	; log(|Info(), ["Concrete syntax in '", file2, "'"])
      | "Export of externals succeeded"
