  strc-ac2abox = 
    where(
      if <get-config>"--indent-c" then
        !"C-pretty.pp.af"
      else
        !"C.pp.af"
      end => pp-table 
    )
  ; comp(|"ast2abox", ["-p", <xtc-find> pp-table ])
    
  strc-abox2text = comp-out(|"abox2text")

  strc-s2c 	= comp(|"s2c",  
