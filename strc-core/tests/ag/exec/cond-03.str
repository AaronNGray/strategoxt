module cond-03
imports
  libstratego-lib
  libstratego-lazy

signature
  constructors
    Node: Node * Node -> Node
    Leaf: Node

attributes
  @ Node(lhs, rhs):
    root.maxdepth := <inc> lhs.maxdepth // default value

  @ Node(lhs, rhs):
    root.maxdepth := <inc> rhs.maxdepth // could not have 2 default value

  @ Leaf():
    root.maxdepth := 0

strategies
  compute-String = id

  get-lazy-attribute(|name) =
    id{one( ?(name, v) )} => tree
  ; !v

  get-attribute(|name) =
    get-lazy-attribute(|name) => v
  ; get-value(!v)

  get-maxdepth =
    debug(!"input: ")
  ; compute-Node
  ; get-attribute(|"maxdepth")
  ; debug(!"output: ")

  cond-03 =
    <get-maxdepth> Node(Leaf(),Node(Leaf(),Leaf()))
  ; <get-maxdepth> Node(Leaf(),Node(Node(Leaf(),Leaf()),Leaf()))
  ; <exit> 0
