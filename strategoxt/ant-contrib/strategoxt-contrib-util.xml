<?xml version="1.0"?>
<project name="org.strategoxt.ant.util" basedir=".">
	<macrodef name="uptodate-io">
		<attribute name="type" />
		<attribute name="input" />
		<attribute name="output" />
		<element name="action" />
		<sequential>
			<condition property="@{input}.@{type}">
				<uptodate srcfile="${basedir}/@{input}" targetfile="${basedir}/@{output}" />
			</condition>
			<if>
				<equals arg1="${@{input}.@{type}}" arg2="true" />
				<then>
					<echo message="@{output} is up-to-date" />
				</then>
				<else>
					<log message="@{input} -> @{output}" />
					<action />
				</else>
			</if>
		</sequential>
	</macrodef>

	<macrodef name="uptodate-mio">
		<attribute name="type" />
		<attribute name="input" />
		<attribute name="output" />
		<element name="action" />
		<element name="deps" />
		<sequential>
			<condition property="@{input}.@{type}">
				<uptodate targetfile="@{output}">
					<srcfiles dir="${basedir}" includes="@{input}" />
					<deps />
				</uptodate>
			</condition>
			<if>
				<equals arg1="${@{input}.@{type}}" arg2="true" />
				<then>
					<echo message="@{output} is up-to-date" />
				</then>
				<else>
					<log message="@{input} -> @{output}" />
					<action />
				</else>
			</if>
		</sequential>
	</macrodef>

	<macrodef name="log">
		<attribute name="message" />
		<sequential>
			<echo message="========================================================================================" />
			<echo message="@{message}" />
			<echo message="========================================================================================" />
			<echo message="" />
		</sequential>
	</macrodef>
</project>