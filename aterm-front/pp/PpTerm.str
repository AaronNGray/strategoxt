module PpTerm
imports liblib ugly-print pp-aterm-options

strategies

  io-PpTerm =
    io-wrap(max-term-size-option+max-depth-option,
      if <get-config>"--max-depth" => depth then
        at-depth(!depth, !"...")
      end
    ; ugly-print
    ; concat-content
    )
    
strategies 

  concat-content = 
    bottomup( try( \ Conc(l1, l2) -> <conc> (l1, l2) \ ))
