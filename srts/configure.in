AC_INIT(src/stratego.c)
AM_INIT_AUTOMAKE(srts,0.7)

dnl Let aclocal use macros in ./config directory
ACLOCAL="${ACLOCAL} -I ."

AC_ARG_WITH(aterm, 
  [  --with-aterm          Specify location of aterm library, default: \$prefix], 
  ATERM=$withval, 
  ATERM="$prefix"
)
AC_SUBST(ATERM)

AC_ARG_WITH(cpl, 
  [  --with-cpl            Use the choice point library], 
  CPL=$withval usecpl=true, 
  usecpl=false
)
AC_SUBST(CPL)
AM_CONDITIONAL(USECPL, test x$usecpl = xtrue)

AC_REVISION($Id: configure.in,v 1.16 2002/03/31 15:13:08 stratego Exp $)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

CHECK_FOR_MPROTECT

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_SUBST(CC)
AC_SUBST(XT)
AC_SUBST(ATERM)
AC_SUBST(RELEASE)
AC_SUBST(STRATEGO)
AC_SUBST(GPP)

AC_OUTPUT(
	Makefile
	README 
	src/Makefile
	src/make_rules
)
