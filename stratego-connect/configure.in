AC_INIT(src/connect.c)
AM_INIT_AUTOMAKE(stratego-connect,0.9)

AC_ARG_WITH(aterm, 
 [  --with-aterm          Specify location of ATerm library, default: \$prefix], 
 ATERM=$withval, 
 ATERM="$prefix"
)
AC_SUBST(ATERM)

AC_ARG_WITH(srts, 
  [  --with-srts  Specify location of Stratego run-time system, default: \$prefix], 
  STRATEGORTS=$withval, 
  STRATEGORTS="$prefix"
)
AC_SUBST(STRATEGORTS)

AC_ARG_WITH(ssl, 
  [  --with-ssl  Specify location of Stratego Standard Library,  default: \$prefix], 
  SSL=$withval, 
  SSL="$prefix"
)
AC_SUBST(SSL)

AC_ARG_WITH(stratego, 
  [  --with-stratego  Specify location of Stratego Compiler (for testing), default: \$prefix], 
  STRATEGO=$withval, 
  STRATEGO="$prefix"
)
AC_SUBST(STRATEGO)

AC_ARG_WITH(rpmdir,
  [  --with-rpmdir          Specify location of rpm directory: /usr/src/redhat/],
  RPMDIR=$withval,
  RPMDIR="/usr/src/redhat/"
)
AC_SUBST(RPMDIR)

AC_ARG_WITH(rpmprefix,
  [  --with-rpmprefix          Specify location of installation prefix for rpm: /usr],
  RPMPREFIX=$withval,
  RPMPREFIX="/usr"
)
AC_SUBST(RPMPREFIX)

AC_ARG_WITH(rpmtmp,
  [  --with-rpmtmp          Specify location of rpm temporary directory: /tmp],
  RPMTMP=$withval,
  RPMTMP="/tmp"
)
AC_SUBST(RPMTMP)

AC_REVISION($Id: configure.in,v 1.12 2003/01/25 23:13:41 stratego Exp $)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_SUBST(ATERM)
AC_SUBST(RELEASE)
AC_SUBST(STRATEGORTS)

AC_OUTPUT( \
	Makefile \
	README \
	src/Makefile \
	spec/Makefile \
)
