module term-to-dot
imports xtc-lib lib term-to-adot
strategies

  term-to-dot =
    option-wrap(term-to-adot-options <+ io-options,
      xtc-temp-files(
        xtc-io(
          xtc-io-transform(to-adot)
          ; xtc-transform(!"ast2abox", !["-p", <xtc-find> "Dot-pretty.pp"])
          ; xtc-transform(!"abox2text")
        )
      )
    )
