rm -f mkinstalldirs missing install-sh

PKGS="autoxt srts xtc sdf-import sc ssl gpp box-tools cgen c-tools stratego-front aterm-tools asfix-tools dot-tools graph-tools sdf-tools stratego-tools xt boxenv"

#gbtools stratego-connect grammar-recovery 

for dir in $PKGS
do 
  echo
  echo "reconfiguring in $dir"
  echo
  (cd $dir; ./bootstrap)
done

rm -f config.cache
rm -f acconfig.h
aclocal -I .
autoconf
#acconfig
autoheader
automake -a


