rm -f mkinstalldirs missing install-sh

PKGS="srts ssl sc-boot boxenv gpp-boot cgen aterm-tools asfix-tools graph-tools gpp sdf-tools stratego-tools stratego-front sc xt"

#gbtools stratego-connect grammar-recovery 

for dir in $PKGS
do 
  echo
  echo "reconfiguring in $dir"
  echo
  (cd $dir; sh ./bootstrap)
done

rm -f config.cache
rm -f acconfig.h
aclocal-1.5
autoconf-2.53
#acconfig
autoheader-2.53
automake-1.5 -a


