# Touch bootstrapped sources because Subversion doesn't sets the mtime of files to checkout time,
# not to the last mtime in the repository.

echo "PWD"
echo $PWD

SRCROOT=`dirname $0`
echo "SRCROOT"
echo $SRCROOT

MTIME=`date +%Y%m%d%H%M.%S`
echo "MTIME"
echo $MTIME

find . -print | xargs touch -t $MTIME

rm -f mkinstalldirs missing install-sh

PKGS="autoxt srts xtc sdf-import sc ssl gpp c-tools stratego-front aterm-tools asfix-tools dot-tools graph-tools sdf-front sdf-tools stratego-tools boxenv stratego-util"

for dir in $PKGS
do 
  echo
  echo "bootstrapping in $dir"
  echo
  (cd $dir; ./bootstrap)
done

touch README
touch NEWS

rm -f config.cache
rm -f acconfig.h
aclocal -I .
autoconf
#acconfig
autoheader
automake -a