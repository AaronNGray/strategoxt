module index/query

rules

  /**
   * Get one index entry that matches the given key, or fail.
   *
   * @type template -> ?elem
   */
  index-get-one:
    key -> <prim("LANG_index_get_one", key)>

  /**
   * Get all index entries that match the given key.
   *
   * @type template -> List(elem)
   */
  index-get-all:
    key -> <prim("LANG_index_get_all", key)>

  /**
   * Get all child entries of the given key.
   *
   * @type template -> List(elem)
   */    
  index-get-all-childs:
    key -> <prim("LANG_index_get_all_childs", key)>
  
  /**
   * Gets a list of all sources for the current project.
   *
   * @type x -> List(partition)
   */   
  index-get-all-sources =
    prim("LANG_index_get_all_sources")
  
  /**
   * Gets all index entries for the given source.
   *
   * @type partition -> List(elem)
   */  
  index-get-all-in-source:
    source -> <prim("LANG_index_get_all_in_source", source)>

  /**
   * Gets the containing sources of index entry with given key.
   *
   * @type template -> List(partition)
   */  
  index-get-all-sources-of:
    key -> <prim("LANG_index_get_all_sources_of", key)>
