strategies

  io-ast2text = 
    xtc-io-wrap(ast2text-options, ast2text)
    
  ast2text-options =
      abox2text-options
    + pp-options

  ast2text =
      xtc-transform(!"Ast-2-abox", create-pp-table-args)
