module ast2text
imports xtc-lib stratego-xt-xtc-tools options verbose lib-pp-table-args abox2text

strategies

  io-ast2text = 
    xtc-io-wrap(ast2text-options, ast2text)
    
  ast2text-options =
      abox2text-options
    + pp-options

  ast2text =
      xtc-transform(!"ast2abox", <get-config; map(!["-p", <id>]); concat> "-p")
    ; xtc-abox2text(pass-width)
