module Instruction

imports

	Common
	Term
	Task
	
templates

	MsgType.Note = <note>
	MsgType.Warn = <warning>
	MsgType.Err  = <error>
	
	MsgTrigger.Fail = <fails>
	MsgTrigger.Succ = <succeeds>
	MsgTrigger.Mult = <has multiple results>
	
	Instruction.Msg = <show <MsgType> <Term> on <Term> when <Term> <MsgTrigger>>
	
	Instruction.Choice = <choose <Term*; separator=" <+ ">>
	Instruction.Sequence = <sequence <Term*; separator=" ; ">>
	Instruction.Combine = <concat <Term*; separator=" + ">>
	
	Instruction.Id = <produce <Term>>
	Instruction.PropLookup = <lookup property <Term> on <Term>>
	Instruction.PropsLookup = <lookup properties <Term> on <Term>>
	Instruction.PropCheck = <check prop <Term> <Term> against <Term> using relation <Term>>
	
	Instruction.Rewrite = <rewrite <Term> using relation <Term>>
	Instruction.Match = <match <Term> using relation <Term> wrt bindings <Term>>
		
	Instruction.ResolveDefs = <resolve <Term> <Term> definition in <Term> wrt props <Term>>
	