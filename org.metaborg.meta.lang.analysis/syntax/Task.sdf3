module Task

imports

	Common
	Term
	URI
	Instruction

templates

	Section.Tasks = 
<tasks

	<TaskDef*; separator="\n\n">
>
	
	TaskDef.TaskDef = 
<task <TASKID> [<TaskRef*; separator=", ">] = 
	<Instruction> 
	-\> 
	<Result>
>
	TaskRef.TaskRef = <<TASKID>>
	
	Instruction = <<Term>> {avoid}
	
	Result       = <<Term>>
	Result.Fail  = "fail"
	Result.Empty = "_"
	
	Term.TaskRef = <&<TASKID>>
	Term.URI = </ <URI> />
