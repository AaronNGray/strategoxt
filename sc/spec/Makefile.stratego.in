INCLUDES 	= -I@STRATEGORTS@/include \
		  -I@STRATEGOLIB@/include \
		  -I@ATERM@/include

LDFLAGS		= -L@STRATEGORTS@/lib \
		  -L@STRATEGOLIB@/lib \
		  -L@ATERM@/lib 

LDADD		= -lstratego.opt \
		  -lstratego-lib.opt \
		  -lATerm-gcc \
		  -lm

SUFFIXES 	= .str .cr
SC 		= @prefix@/bin/sc

.str.c : 
	$(SC) $(STRINCLUDES) $(SCFLAGS) -i $< -o $@ -c

.cr.c : 
	$(SC) $(STRINCLUDES) $(SCFLAGS) -i $< -o $@ -c

bootclean:
	rm -f $(BOOTCLEANFILES)
