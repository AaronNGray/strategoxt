AC_INIT(spec/front/inlining.r)
AM_INIT_AUTOMAKE(stratego-spec,0.6)

AC_ARG_WITH(xt, [  --with-xt            Specify location of XT library, default: \$prefix], XT=$withval, XT="$prefix")
AC_ARG_WITH(cgen, [  --with-cgen            Specify location of CGEN library, default: \$prefix], CGEN=$withval, CGEN="$prefix")
AC_ARG_WITH(cpl, [  --with-cpl            Specify location of choice point library, default: \$XT], CPL=$withval, CPL="$XT")
AC_ARG_WITH(aterm, [  --with-aterm            Specify location of aterm library, default: \$XT], ATERM=$withval, ATERM="$XT")
AC_ARG_WITH(release, [  --with-release            Specify location of releases, default: \$XT], RELEASE=$withval, RELEASE="$prefix")
AC_ARG_WITH(gpp, [  --with-gpp            Specify location of gpp, default: \$XT], GPP=$withval, GPP="$XT")
AC_ARG_WITH(stratego, [  --with-stratego            Specify location of stratego, default: \$XT], STRATEGO=$withval, STRATEGO="$XT")
AC_ARG_WITH(stratego-boot, [  --with-stratego-boot           Specify location of stratego, default: \$XT], STRATEGOBOOT=$withval, STRATEGOBOOT="$XT")

AC_ARG_WITH(stratego-lib, [  --with-stratego-lib            Specify location of stratego, default: \$XT], STRATEGOLIB=$withval, STRATEGOLIB="$STRATEGO")

AC_ARG_WITH(stratego-rts, [  --with-stratego-rts            Specify location of stratego, default: \$XT], STRATEGORTS=$withval, STRATEGORTS="$STRATEGO")


AC_REVISION($Id: configure.in,v 1.1 2001/08/22 09:38:13 visser Exp $)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_SUBST(CC)
AC_SUBST(XT)
AC_SUBST(CGEN)
AC_SUBST(CPL)
AC_SUBST(ATERM)
AC_SUBST(RELEASE)
AC_SUBST(STRATEGO)
AC_SUBST(STRATEGOBOOT)
AC_SUBST(STRATEGOLIB)
AC_SUBST(STRATEGORTS)
AC_SUBST(GPP)

AC_OUTPUT( \
	Makefile \
	README \
	spec/Makefile \
	spec/make_rules \
	spec/c/Makefile \
	spec/c/data/Makefile \
	spec/c/ac2c \
	spec/front/Makefile \
	spec/front/data/Makefile \
	spec/match/Makefile \
	spec/match/data/Makefile \
	spec/opt/Makefile \
	spec/sc/Makefile \
	spec/sc/sc \
	spec/si/Makefile \
	spec/si/stratego \
	spec/si/data/Makefile \
	spec/sig/Makefile \
	spec/lib/Makefile \
	spec/syn/Makefile \
	spec/test1/Makefile \
	spec/test2/Makefile \
	spec/test3/Makefile \
	spec/test4/Makefile \
	spec/sdf/Makefile \
	spec/src/Makefile \
)
