AC_INIT(spec/front/inlining.r)
AM_INIT_AUTOMAKE(sc,0.6a)

AC_ARG_WITH(cgen,    [  --with-cgen      Specify location of CGEN library, default: \$prefix], CGEN=$withval, CGEN="$prefix")
#AC_ARG_WITH(cpl,    [  --with-cpl       Specify location of choice point library, default: \$prefix], CPL=$withval, CPL="$prefix")
AC_ARG_WITH(aterm,   [  --with-aterm     Specify location of aterm library, default: \$prefix], ATERM=$withval, ATERM="$prefix")
AC_ARG_WITH(gpp,     [  --with-gpp       Specify location of gpp, default: \$prefix], GPP=$withval, GPP="$prefix")
AC_ARG_WITH(boot,    [  --with-boot      Specify Stratego Compiler to use in bootstrapping, default: \$prefix], STRATEGOBOOT=$withval, STRATEGOBOOT="$prefix")
AC_ARG_WITH(sc-boot, [  --with-sc-boot   Specify where to install bootstrapped sources, default: \$pwd], SCBOOT=$withval, SCBOOT="$pwd")
AC_ARG_WITH(ssl,     [  --with-ssl       Specify location of Stratego Library , default: \$prefix], STRATEGOLIB=$withval, STRATEGOLIB="$STRATEGO")
AC_ARG_WITH(srts,    [  --with-srts      Specify location of Stratego Run-time System, default: \$prefix], STRATEGORTS=$withval, STRATEGORTS="$STRATEGO")

AC_REVISION($Id: configure.in,v 1.3 2001/08/22 16:03:56 visser Exp $)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_SUBST(CC)
AC_SUBST(CGEN)
#AC_SUBST(CPL)
AC_SUBST(ATERM)
AC_SUBST(SCBOOT)
AC_SUBST(STRATEGOBOOT)
AC_SUBST(STRATEGOLIB)
AC_SUBST(STRATEGORTS)
AC_SUBST(GPP)

AC_OUTPUT( \
	Makefile \
	README \
	spec/Makefile \
	spec/make_rules \
	spec/c/Makefile \
	spec/c/data/Makefile \
	spec/c/ac2c \
	spec/front/Makefile \
	spec/front/data/Makefile \
	spec/match/Makefile \
	spec/match/data/Makefile \
	spec/opt/Makefile \
	spec/sc/Makefile \
