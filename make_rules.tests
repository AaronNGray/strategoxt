%_check : Makefile
	(\
	  prog=./$($(*)_check_prog) ;\
	  input=$($(*)_check_input) ;\
	  if [ "a$${input}" != "a" ]; then input="-i $(srcdir)/$${input}"; fi ;\
	  output=$($(*)_check_output) ;\
	  correct=$(srcdir)/$($(*)_check_correct) ;\
	  switches="$($(*)_check_switches)" ;\
	  echo set -e ;\
	  echo $${prog} $${switches} $${input} -o $${output};\
	  echo diff $${output} $${correct}  ;\
	  echo rm $${output} ;\
	) >$@ && \
	chmod +x $@
