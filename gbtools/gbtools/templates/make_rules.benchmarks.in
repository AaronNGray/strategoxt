SDF_TOOLS   = @SDF_TOOLS@
SGLR        = @SGLR@

# implicit rules for running SGLR benchmarks

# Directories; sdf2 should be declared in user makefile
SDFBENCH=$(SDF_TOOLS)/bin/sdf-bench
IMPLODE=$(ASFIX_TOOLS)/bin/implode-asfix

.PRECIOUS: %.tbl %.tree %.trm

bench: $(grammar).def $(grammar).tbl $(grammar).rbm #$(wildcard data/*.$(suffix))
	PATH=$(SDF_TOOLS)/bin:$${PATH} $(SDFBENCH) $(grammar) && \
	touch bench

%.tree: %.$(suffix) $(grammar).tbl
	PATH=$(SGLR)/bin:$${PATH} sglr -2 -p $(grammar).tbl -i $< -o $@ -tl -f

plots: bench time.plot $(top_srcdir)/benchmarks/one-language.gp
	gnuplot $(top_srcdir)/benchmarks/one-language.gp  
	touch plots

CLEANFILES += *.tree sglr-stats.txt sglr-stats.trm *.plot* *.data average.ltx chars-per-sec.ltx chars-reds-per-sec.ltx parse-time.ltx bench plots

