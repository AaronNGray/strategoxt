#! /bin/sh

. `dirname $0`/pbsd-lib.sh

pkgs=$*


# For each specified package, remove its package definition from the
# development repository
for pkg in ${pkgs}
do
   pkg_version=`grep "^${pkg}," pkg-list | cut -d, -f2`
   pkg_loc=`pkg-find -p ${pkg}-${pkg_version} -I ${DEVEL_REPO}`
   if [ "a${pkg_loc}" = "a" ]; then
      echo "Package ${pkg} not in development mode." >&2
      exit 1
   fi
   rm -f ${pkg_loc}
done

create_a_bundle ${bundled_pkgs}
