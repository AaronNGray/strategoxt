/**
 * XTC composition library testsuite (overlays)
 *  
 * @author Niels Janssen (njanssen@cs.uu.nl)
 */
module lib-test-overlays

/** 
 * Overlays used in xtc-model tests
 */
overlays 

  model-xt-implicit = 
    |[ model { 
         descriptor = xt 
         implicit template {}
       }
    ]|    

  model-xtservice-implicit = 
    |[ model { 
         descriptor = xtservice 
         implicit template {}
       }
    ]|    

  model-exec-implicit = 
    |[ model { 
         descriptor = exec
         streams { 
           input  = file "-i"
           output = file "-o"
         }
         implicit template { layout = }
       }
    ]|

  model-exec-regular = 
    |[ model { 
         descriptor = exec
         streams { 
           input  = file "-i"
           output = file "-o"
         }
         regular template { 
           layout = $input, $output, $error, $arguments
         }
       }
    ]|
 
  configuration-empty = 
    XtcConf(None(),None(),None(),[])

  configuration-io = 
    XtcConf(Some(FILE("i")),Some(FILE("o")),None(),[])

/** 
 * Overlays used in repository tests
 */
overlays 
 
  mysglr = ( |[ $mysglr ]|,
             ( "/usr/bin/mysglr"
             , [ model-xt-implicit, XtcImported
               ]
             )
           )
