module sdf-desugar
imports Sdf2 options simple-traversal implode-aterm

/**
 * sdf-desugar implements the following desugarings:
 *
 *   - remove double quotes in String literals: cons, lit
 *   - replace no-attrs by attrs([])
 *
 * Author:
 *   Martin Bravenboer
 */
strategies

  main-sdf-desugar =
    io-wrap(
      topdown(repeat(Desugar); try(DesugarOnce))
    )

  Desugar :
    no-attrs() -> attrs([])

rules

  DesugarOnce =
    term(implode-aterm)

  EnsugarOnce =
    lit(double-quote)
