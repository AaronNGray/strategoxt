AC_INIT(Makefile.in)
AM_INIT_AUTOMAKE(stratego,0.9beta1)

AC_ARG_WITH(aterm, 
  [  --with-aterm=DIR            Location of external aterm package.], 
  ATERM=$withval, 
  ATERM="$prefix"
)
AC_SUBST(ATERM)

AC_ARG_WITH(cpl, 
  [  --with-cpl=DIR              Use the choice point library (optional)], 
  CPL=$withval usecpl=true, 
  usecpl=false
)
AC_SUBST(CPL)
AM_CONDITIONAL(USECPL, test x$usecpl = xtrue)

AC_ARG_WITH(sglr, 
  [  --with-sglr=DIR             Specify location of SGLR], 
  SGLR="$withval", 
  SGLR="$prefix"
)
AC_SUBST(SGLR)

AC_ARG_WITH(pgen, 
  [  --with-pgen=DIR             Specify location of SDF2 parser generator], 
  PGEN="$withval", 
  PGEN="$prefix"
)
AC_SUBST(PGEN)

AC_ARG_WITH(asfix-tools, 
  [  --with-asfix-tools=DIR      Specify location of asfix-tools], 
  ASFIX_TOOLS="$withval", 
  ASFIX_TOOLS="$prefix"
)
AC_SUBST(ASFIX_TOOLS)

AC_ARG_WITH(stratego-tools, 
  [  --with-stratego-tools=DIR   Specify location of stratego-tools], 
  STRATEGO_TOOLS="$withval", 
  STRATEGO_TOOLS="$prefix"
)
AC_SUBST(STRATEGO_TOOLS)

AC_ARG_WITH(sdf-tools, 
  [  --with-sdf-tools=DIR        Specify location of sdf-tools], 
  SDF_TOOLS="$withval", 
  SDF_TOOLS="$prefix"
)
AC_SUBST(SDF_TOOLS)

AC_ARG_ENABLE(concrete, 
[  --enable-concrete           Enable concrete syntax (requires sglr, pgen, 
                              asfix-tools, stratego-tools, sdf-tools)], 
  CONCRETE="yes"; FRONTPKG="stratego-front", 
  CONCRETE="no" ; FRONTPKG=""
)
AC_SUBST(CONCRETE)
AC_SUBST(FRONTPKG)

AC_ARG_ENABLE(boot, 
  [  --enable-boot               Enable bootstrapping (implies concrete syntax)], 
  BOOT="yes" ; FRONTPKG="stratego-front" ; BOOTPKG="sc", 
  BOOT="no"  ; BOOTPKG=""
)
AC_SUBST(BOOT)
AC_SUBST(BOOTPKG)

AC_ARG_ENABLE(exe,    
  [  --enable-exe                Extension of executables], 
  EXE=".exe", 
  EXE=""
)
AC_SUBST(EXE)

PKGS="srts ssl cgen sc-boot gpp-boot $FRONTPKG $BOOTPKG"
AC_SUBST(PKGS)

top_srcdir=`pwd`

AC_OUTPUT(
	Makefile 
	README
	emacs/Makefile
)

AB_CONFIG_PKG(aterm,
   --with-gcc
   --with-dbg
)

if test x$usecpl = xtrue
then

AB_CONFIG_PKG(srts,
   --with-aterm=${ATERM}
   --with-cpl=${CPL}
)

else

AB_CONFIG_PKG(srts,
   --with-aterm=${ATERM}
)

fi

AB_CONFIG_PKG(ssl,
   --with-aterm=${ATERM}
   --with-srts=${prefix}
   --with-stratego=${prefix}
)
AB_CONFIG_PKG(cgen,
   --with-aterm=${ATERM}
   --with-ssl=${prefix}
   --with-srts=${prefix}
)
AB_CONFIG_PKG(sc-boot,
   --with-aterm=${ATERM}
   --with-ssl=${prefix}
   --with-srts=${prefix}
)
AB_CONFIG_PKG(gpp-boot,
   --with-aterm=${ATERM}
   --with-ssl=${prefix}
   --with-srts=${prefix}
   --with-sglr=${SGLR}
   --with-pgen=${PGEN}
   --with-asfix-tools=${ASFIX_TOOLS}
)
AB_CONFIG_PKG(stratego-front,
   --with-stratego=${prefix} 
   --with-sglr=${SGLR}      
   --with-pgen=${PGEN}                
   --with-asfix-tools=${ASFIX_TOOLS}    
   --with-stratego-tools=${STRATEGO_TOOLS}
   --with-sdf-tools=${SDF_TOOLS}
   --with-gpp=${prefix}
   --with-cgen=${CGEN}
)
AB_CONFIG_PKG(sc,
   --with-aterm=${ATERM}
   --with-ssl=${prefix}
   --with-srts=${prefix}
   --with-sc-boot=${top_srcdir}/sc-boot
   --with-cgen=${prefix}
   --with-gpp=${prefix}
)
