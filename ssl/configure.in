AC_INIT(src/stratego-lib.h)
AM_INIT_AUTOMAKE(stratego-lib,0.6)

AC_ARG_WITH(xt, [  --with-xt            Specify location of xt library, default: \$prefix], XT=$withval, XT="$prefix")
AC_ARG_WITH(aterm, [  --with-aterm            Specify location of aterm library, default: \$XT], ATERM=$withval, ATERM="$XT")
AC_ARG_WITH(release, [  --with-release            Specify location of releases, default: \$XT], RELEASE=$withval, RELEASE="$prefix")
AC_ARG_WITH(gpp, [  --with-gpp            Specify location of gpp, default: \$XT], GPP=$withval, GPP="$XT")
AC_ARG_WITH(stratego, [  --with-stratego            Specify location of stratego, default: \$XT], STRATEGO=$withval, STRATEGO="$XT")
AC_ARG_WITH(stratego-rts, [  --with-stratego-rts            Specify location of stratego run-time system, default: \$XT], STRATEGORTS=$withval, STRATEGORTS="$XT")
AC_ARG_WITH(cpl, [  --with-cpl            Specify location of choice point library (CPL), default: \$prefix], CPL=$withval, CPL="$prefix")

AC_REVISION($Id: configure.in,v 1.1 2001/08/22 09:44:52 visser Exp $)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)
AC_SUBST(STRATEGORTS)
AC_SUBST(CPL)
AC_SUBST(ATERM)

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_SUBST(ATERM)
AC_SUBST(XT)
AC_SUBST(GPP)
AC_SUBST(RELEASE)
AC_SUBST(STRATEGO)
AC_SUBST(STRATEGORTS)

AC_OUTPUT( \
	Makefile \
	README \
	src/Makefile \
	spec/Makefile \
	spec/data/Makefile \
)
