AC_INIT(src/stratego-lib.h)
AM_INIT_AUTOMAKE(ssl,0.9beta2)

#AC_CONFIG_AUX_DIR([config])

AC_ARG_WITH(aterm, 
 [  --with-aterm          Specify location of ATerm library, default: \$prefix], 
 ATERM=$withval, 
 ATERM="$prefix"
)
AC_SUBST(ATERM)

AC_ARG_WITH(srts, 
  [  --with-srts  Specify location of Stratego run-time system, default: \$prefix], 
  STRATEGORTS=$withval, 
  STRATEGORTS="$prefix"
)
AC_SUBST(STRATEGORTS)

AC_ARG_WITH(sc, 
  [  --with-sc  Specify location of Stratego Compiler (for testing), default: \$prefix], 
  SC_BOOT=$withval, 
  SC_BOOT="$prefix"
)
AC_SUBST(SC_BOOT)

AC_ARG_WITH(rpmprefix,
  [  --with-rpmprefix       Specify location of installation prefix for rpm: /usr],
  RPMPREFIX=$withval,
  RPMPREFIX="/usr"
)
AC_SUBST(RPMPREFIX)

AC_ARG_WITH(rpmdir, 
  [  --with-rpmdir          Specify location of rpm directory: /usr/src/redhat/], 
  RPMDIR=$withval, 
  RPMDIR="/usr/src/redhat/"
)
AC_SUBST(RPMDIR)

AC_ARG_WITH(rpmtmp, 
  [  --with-rpmtmp          Specify location of rpm temporary directory: /tmp], 
  RPMTMP=$withval, 
  RPMTMP="/tmp"
)
AC_SUBST(RPMTMP)

AC_ARG_ENABLE(develop, 
  [  --enable-develop       Enable development of libray modules (requires parse-mod)], 
  develop="true",
  develop="false"
)
AM_CONDITIONAL(DEVELOP, test "x$develop" = "xtrue")

AM_CONFIG_HEADER([config.h])
AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

AC_SUBST(ATERM)
AC_SUBST(RELEASE)
AC_SUBST(STRATEGORTS)

AC_OUTPUT( \
	Makefile \
	README \
	src/Makefile \
	spec/Makefile \
	spec/data/Makefile \
)
