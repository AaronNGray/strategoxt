AC_INIT(src/stratego-lib.h)
AM_INIT_AUTOMAKE(ssl,0.6.1)

AC_ARG_WITH(aterm, 
 [  --with-aterm          Specify location of ATerm library, default: \$prefix], 
 ATERM=$withval, 
 ATERM="$prefix"
)
AC_SUBST(ATERM)

AC_ARG_WITH(gpp, 
  [  --with-gpp           Specify location of GPP, default: \$prefix], 
  GPP=$withval, 
  GPP="$prefix"
)

AC_ARG_WITH(stratego, 
  [  --with-stratego      Specify location of the Stratego compiler, default: \$prefix], 
  STRATEGO=$withval, 
  STRATEGO="$prefix"
)

AC_ARG_WITH(stratego-rts, 
  [  --with-stratego-rts  Specify location of Stratego run-time system, default: \$prefix], 
  STRATEGORTS=$withval, 
  STRATEGORTS="$prefix"
)
AC_SUBST(STRATEGORTS)

