#  [  --with-cpl          Specify location of choice point library (CPL), default: \$prefix], 
#  CPL=$withval, 
#  CPL="$prefix"
#)
#AC_SUBST(CPL)

AC_REVISION($Id: configure.in,v 1.6 2001/09/15 22:30:23 visser Exp $)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_SUBST(ATERM)
AC_SUBST(XT)
AC_SUBST(GPP)
AC_SUBST(RELEASE)
AC_SUBST(STRATEGO)
AC_SUBST(STRATEGORTS)

AC_OUTPUT( \
	Makefile \
	README \
	src/Makefile \
	spec/Makefile \
	spec/data/Makefile \
)
