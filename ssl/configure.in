AC_INIT(src/stratego-lib.h)
AM_INIT_AUTOMAKE(ssl,0.7beta)

AC_ARG_WITH(aterm, 
 [  --with-aterm          Specify location of ATerm library, default: \$prefix], 
 ATERM=$withval, 
 ATERM="$prefix"
)
AC_SUBST(ATERM)

AC_ARG_WITH(srts, 
  [  --with-srts  Specify location of Stratego run-time system, default: \$prefix], 
  STRATEGORTS=$withval, 
  STRATEGORTS="$prefix"
)
AC_SUBST(STRATEGORTS)

AC_ARG_WITH(stratego, 
  [  --with-stratego  Specify location of Stratego Compiler (for testing), default: \$prefix], 
  STRATEGO=$withval, 
  STRATEGO="$prefix"
)
AC_SUBST(STRATEGO)

AC_REVISION($Id: configure.in,v 1.13 2002/01/10 20:58:14 stratego Exp $)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_SUBST(ATERM)
AC_SUBST(RELEASE)
AC_SUBST(STRATEGORTS)

AC_OUTPUT( \
	Makefile \
	README \
	src/Makefile \
	spec/Makefile \
	spec/data/Makefile \
)
