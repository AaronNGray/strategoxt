module posix-file-test
imports sunit posix-file

strategies

  main = 
    test-suite(!"posix-file-test",
      fileno-tests
    )

  fileno-tests =
    apply-test(!"fileno on stdin  -- 1", fileno, !stdin(), !0)
  ; apply-test(!"fileno on stdin  -- 2", fileno, !stdin(), STDIN_FILENO)
  ; apply-test(!"fileno on stdout -- 1", fileno, !stdout(), !1)
  ; apply-test(!"fileno on stdout -- 2", fileno, !stdout(), STDOUT_FILENO)
  ; apply-test(!"fileno on stderr -- 1", fileno, !stderr(), !2)
  ; apply-test(!"fileno on stderr -- 2", fileno, !stderr(), STDERR_FILENO)

