<project name="dependencies" default="download">
	<property name="lib.dir" value="lib" />

	<target name="download" description="Download external dependencies">
		<mkdir dir="${lib.dir}" />
		<get src="http://search.maven.org/remotecontent?filepath=com/google/guava/guava/14.0.1/guava-14.0.1.jar" dest="${lib.dir}/guava.jar" />
		<get src="http://search.maven.org/remotecontent?filepath=com/google/guava/guava/14.0.1/guava-14.0.1-javadoc.jar" dest="${lib.dir}/guava-javadoc.jar" />
		<get src="http://search.maven.org/remotecontent?filepath=com/google/guava/guava/14.0.1/guava-14.0.1-sources.jar" dest="${lib.dir}/guava-sources.jar" />
	</target>
</project>
