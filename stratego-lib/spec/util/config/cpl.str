/**
 * Choice Point Library related strategies.
 */
module util/config/cpl
strategies

  cpl-loaded = 
    ?t; prim("_cpl_loaded", t)

  if-cpl-loaded(s1, s2) =
     if not(cpl-loaded) then
       s2
     else
       s1
     end

  if-cpl-loaded(s) =
    if-cpl-loaded(s, log(|Error(), "Choice Point Library (CPL) required"); <exit> 1)
