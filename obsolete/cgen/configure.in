AC_INIT(sig/C.r)
AM_INIT_AUTOMAKE(cgen,0.7beta3)

AC_REVISION($Id: configure.in,v 1.11 2002/03/07 23:57:29 stratego Exp $)

AC_ARG_WITH(gpp,
  [  --with-gpp       Specify location of gpp, default: \$prefix],
  GPP=$withval,
  GPP="$prefix"
)
AC_SUBST(GPP)                                                                   

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_OUTPUT( \
	Makefile \
	README \
	pp/Makefile \
	sig/Makefile \
	syn/Makefile \
	data/Makefile \
)
