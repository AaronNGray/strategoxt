AC_INIT(sig/C.r)
AM_INIT_AUTOMAKE(cgen,0.9beta1)

AC_REVISION($Id: configure.in,v 1.19 2002/11/15 00:05:59 stratego Exp $)

AC_ARG_WITH(gpp,
  [  --with-gpp             Specify location of gpp, default: \$prefix],
  GPP=$withval,
  GPP="$prefix"
)
AC_SUBST(GPP)                                                                   


AC_ARG_WITH(rpmprefix,
  [  --with-rpmprefix       Specify location of installation prefix for rpm: /usr],
  RPMPREFIX=$withval,
  RPMPREFIX="/usr"
)
AC_SUBST(RPMPREFIX)

AC_ARG_WITH(rpmdir, 
  [  --with-rpmdir          Specify location of rpm directory: /usr/src/redhat/], 
  RPMDIR=$withval, 
  RPMDIR="/usr/src/redhat/"
)
AC_SUBST(RPMDIR)

AC_ARG_WITH(rpmtmp, 
  [  --with-rpmtmp          Specify location of rpm temporary directory: /tmp], 
  RPMTMP=$withval, 
  RPMTMP="/tmp"
)
AC_SUBST(RPMTMP)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_INSTALL

AM_CONFIG_HEADER([config.h])

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

AC_OUTPUT( \
	Makefile \
	README \
	pp/Makefile \
	sig/Makefile \
	syn/Makefile \
	data/Makefile \
)
