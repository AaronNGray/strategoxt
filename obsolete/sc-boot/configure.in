AC_INIT(src/frontend.c)
AM_INIT_AUTOMAKE(sc-boot,0.6)

AC_ARG_WITH(aterm, 
  [  --with-aterm          Specify location of ATerm library, default: \$prefix], 
  ATERM=$withval, 
  ATERM="$prefix"
)
AC_SUBST(ATERM)

AC_ARG_WITH(cgen,  
  [  --with-cgen           Specify location of CGEN, default: \$prefix], 
  CGEN=$withval, 
  CGEN="$prefix"
)
AC_SUBST(CGEN)

AC_ARG_WITH(gpp,   
  [  --with-gpp            Specify location of GPP, default: \$prefix], 
  GPP=$withval, 
  GPP="$prefix"
)
AC_SUBST(GPP)

AC_ARG_WITH(ssl,   
  [  --with-ssl            Specify location of Stratego Library (SSL), default: \$prefix], 
  STRATEGOLIB=$withval, 
  STRATEGOLIB="$prefix"
)
AC_SUBST(STRATEGOLIB)

AC_ARG_WITH(srts,  
  [  --with-srts           Specify location of Stratego run-time system (SRTS), default: \$prefix], 
  STRATEGORTS=$withval, 
  STRATEGORTS="$prefix"
)
AC_SUBST(STRATEGORTS)

AC_REVISION($Id: configure.in,v 1.5 2001/08/29 08:40:40 visser Exp $)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_OUTPUT( \
	Makefile \
	README \
	src/Makefile \
)
