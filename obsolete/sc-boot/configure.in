AC_INIT(src/frontend.c)
AM_INIT_AUTOMAKE(sc-boot,0.9beta1)

#AC_CONFIG_AUX_DIR([config])

AC_ARG_WITH(aterm, 
  [  --with-aterm          Specify location of ATerm library, default: \$prefix], 
  ATERM=$withval, 
  ATERM="$prefix"
)
AC_SUBST(ATERM)

AC_ARG_WITH(cgen,  
  [  --with-cgen           Specify location of CGEN, default: \$prefix], 
  CGEN=$withval, 
  CGEN="$prefix"
)
AC_SUBST(CGEN)

AC_ARG_WITH(gpp,   
  [  --with-gpp            Specify location of GPP, default: \$prefix], 
  GPP=$withval, 
  GPP="$prefix"
)
AC_SUBST(GPP)

AC_ARG_WITH(ssl,   
  [  --with-ssl            Specify location of Stratego Library (SSL), default: \$prefix], 
  STRATEGOLIB=$withval, 
  STRATEGOLIB="$prefix"
)
AC_SUBST(STRATEGOLIB)

AC_ARG_WITH(srts,  
  [  --with-srts           Specify location of Stratego run-time system (SRTS), default: \$prefix], 
  STRATEGORTS=$withval, 
  STRATEGORTS="$prefix"
)
AC_SUBST(STRATEGORTS)

AC_ARG_WITH(stratego-front,  
  [  --with-stratego-front    Specify location of Stratego Front, default: \$prefix], 
  STRATEGOFRONT=$withval, 
  STRATEGOFRONT="$prefix"
)
AC_SUBST(STRATEGOFRONT)

AC_ARG_WITH(rpmprefix,
  [  --with-rpmprefix          Specify location of installation prefix for rpm: /usr],
  RPMPREFIX=$withval,
  RPMPREFIX="/usr"
)
AC_SUBST(RPMPREFIX)

AC_ARG_WITH(rpmdir, 
  [  --with-rpmdir          Specify location of rpm directory: /usr/src/redhat/], 
  RPMDIR=$withval, 
  RPMDIR="/usr/src/redhat/"
)
AC_SUBST(RPMDIR)

AC_ARG_WITH(rpmprefix, 
  [  --with-rpmprefix          Specify location of installation prefix for rpm: /usr], 
  RPMPREFIX=$withval, 
  RPMPREFIX="/usr"
)
AC_SUBST(RPMPREFIX)

AC_ARG_WITH(rpmtmp, 
  [  --with-rpmtmp          Specify location of rpm temporary directory: /tmp], 
  RPMTMP=$withval, 
  RPMTMP="/tmp"
)
AC_SUBST(RPMTMP)

libexecdir=\$\{exec_prefix\}/libexec/sc-$VERSION
AC_SUBST(libexecdir)

AC_REVISION($Id: configure.in,v 1.22 2002/11/15 00:06:01 stratego Exp $)

AC_CHECK_HEADERS([malloc.h])
AC_CHECK_HEADERS([stdlib.h])
AC_CHECK_HEADERS([string.h])
AC_CHECK_HEADERS([unistd.h])
AC_C_CONST
AC_FUNC_ALLOCA
AC_FUNC_MALLOC
AC_HEADER_STDC
AM_CONFIG_HEADER([config.h.in])

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL

TOP_SRCDIR=`pwd`
AC_SUBST(TOP_SRCDIR)

changequote(,)dnl
case $VERSION in
 [0-9]*.[0-9]*[a-z])  DIST_ALPHA="README-alpha";;
 [0-9]*.[0-9]*.[0-9]*) DIST_ALPHA="README-alpha";;
 *) DIST_ALPHA=;;
esac
changequote([, ])dnl
AC_SUBST(DIST_ALPHA)

AC_OUTPUT( \
	Makefile \
	README \
	src/Makefile \
)
