# usage:
#   ast2abox [-h] [-i ast] [-o abox] [-p table_1] ... [-p table_n] [-v]
#
# where
#   -h          Displays usage information.
#   -i ast      Specifies the AST to pretty-print.
#   -o abox     Specifies the file name where the resultign abox term is stored.
#   -p table    Specifies a pretty-print table
#   -v          Run verbosely.

PREFIX=__PREFIX__
MAKE=__MAKE__
pkgdatadir=__pkgdatadir__

# no core files
ulimit -c 0

usage () {
cat <<ENDCAT
usage:
  ast2abox [-h] [-i ast] [-o abox] [-p table_1] ... [-p table_n]

where
  -h          Displays usage information.
  -i ast      Specifies the AST to pretty-print.
  -o abox     Specifies the file name where the resultign abox term is stored.
  -p table    Specifies a pretty-print table
  -v          Run verbosely.
ENDCAT
}

for arg in $*
do
   case $1 in
      -h ) usage; exit 0 ;;
      -i ) INPUT=$2; shift; shift ;;
      -o ) OUTPUT=$2; shift ; shift ;;
      -p ) PP_TABLES="${PP_TABLES} $2"; shift ; shift ;;
      -v ) VERBOSE="-v"; shift ;;
      -* ) usage; exit 1 ;;
   esac
done

# Don't use MAKEFLAGS variable because it might interfere with the make
# that we use.
unset MAKEFLAGS
unset MAKELEVEL

# Building imploded pretty-print tables
for table in ${PP_TABLES}
do
   ${MAKE} -s -f ${pkgdatadir}/gpp.Makefile ${table}.af > /dev/null || exit 1
   PP_AF_TABLES="${PP_AF_TABLES} -p ${table}.af"
done

# Construct the a command line depending on specific switches
cmd="cat ${INPUT} \
     | ${PREFIX}/libexec/Ast2abox -S ${VERBOSE} ${PP_AF_TABLES}"

# -o option has been specified
if [ "a${OUTPUT}" != "a-" -a "a${OUTPUT}" != "a" ]; then
   cmd="$cmd -o ${OUTPUT}"
fi

cmd="$cmd || (echo formatting failed >&2; exit 1)"

# Finally, evaluate the constructed command line
eval ${cmd}
