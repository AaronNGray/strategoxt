CFLAGS	 	= -Wall
DEBUGFLAGS	= -g
OPTFLAGS	= -O
PROFFLAGS	= -pg
#INCLUDES 	= -I$(top_srcdir)/spec/rts \
#		  -I$(top_srcdir)/spec/slib/src \
#		  -I$(ATERM)/include

INCLUDES 	= -I/home/visser/res/stratego/spec/rts \
		  -I/home/visser/res/stratego/spec/slib/src \
		  -I/home/xt/xt/include

LDFLAGS		= -L/home/xt/xt/lib 
LDADD		= /home/visser/res/stratego/spec/rts/libstratego.opt.a \
		  /home/visser/res/stratego/spec/slib/src/libstratego-lib.opt.a \
		  -lATerm-gcc -lm

%.dbg.o: %.c
	$(CC) $(DEBUGFLAGS) $(CFLAGS) $(DEFS) $(INCLUDES) -c $< -o $@

%.opt.o: %.c
	$(CC) $(OPTFLAGS) $(CFLAGS) $(DEFS) $(INCLUDES) -c $< -o $@

%.prof.o: %.c
	$(CC) $(PROFFLAGS) $(CFLAGS) $(DEFS) $(INCLUDES) -c $< -o $@
