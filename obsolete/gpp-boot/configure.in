AC_INIT(src/abox-format.c)
AM_INIT_AUTOMAKE(gpp-boot,0.9beta8)

##AC_CONFIG_AUX_DIR([config])

AC_ARG_WITH(aterm,   
  [  --with-aterm            Specify location of ATerm library], 
  ATERM=$withval, 
  ATERM="$prefix"
)
AC_SUBST(ATERM)

AC_ARG_WITH(asfix-tools,   
   [  --with-asfix-tools      Specify location of asfix-tools package], 
  ASFIX_TOOLS=$withval, 
  ASFIX_TOOLS="$prefix"
)
AC_SUBST(ASFIX_TOOLS)

AC_ARG_WITH(sglr,   
  [  --with-sglr             Specify location of Sglr library], 
  SGLR=$withval, 
  SGLR="$prefix"
)
AC_SUBST(SGLR)

AC_ARG_WITH(ssl,   
  [  --with-ssl              Specify location of Stratego Library (SSL), default: \$prefix], 
  STRATEGOLIB=$withval, 
  STRATEGOLIB="$prefix"
)
AC_SUBST(STRATEGOLIB)

AC_ARG_WITH(srts,  
  [  --with-srts             Specify location of Stratego run-time system (SRTS), default: \$prefix], 
  STRATEGORTS=$withval, 
  STRATEGORTS="$prefix"
)
AC_SUBST(STRATEGORTS)

AC_ARG_WITH(rpmprefix,
  [  --with-rpmprefix        Specify location of installation prefix for rpm: /usr],
  RPMPREFIX=$withval,
  RPMPREFIX="/usr"
)
AC_SUBST(RPMPREFIX)

AC_ARG_WITH(rpmdir, 
  [  --with-rpmdir           Specify location of rpm directory: /usr/src/redhat/], 
  RPMDIR=$withval, 
  RPMDIR="/usr/src/redhat/"
)
AC_SUBST(RPMDIR)

AC_ARG_WITH(rpmtmp, 
  [  --with-rpmtmp           Specify location of rpm temporary directory: /tmp], 
  RPMTMP=$withval, 
  RPMTMP="/tmp"
)
AC_SUBST(RPMTMP)

AC_REVISION($Id: configure.in,v 1.23 2002/12/19 01:08:31 stratego Exp $)

AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_INSTALL

AM_CONFIG_HEADER(config.h)

AC_OUTPUT( \
	Makefile \
	README \
	src/Makefile \
)
