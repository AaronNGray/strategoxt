                           --with-sglr=${prefix})

AC_CONFIG_PKG(gpp,         --with-asc=${prefix} \
                           --with-asource=${prefix} \
                           --with-aterm=${prefix} \
                           --with-sglr=${prefix})

AC_CONFIG_PKG(gb,          --with-aterm=${prefix} \
                           --with-stratego=${prefix} \
                           --with-gt=${prefix})

AC_CONFIG_PKG(gt,          --with-aterm=${prefix} \
                           --with-stratego=${prefix} \
                           --with-gb=${prefix})
AC_CONFIG_PKG(graph-tools,)
