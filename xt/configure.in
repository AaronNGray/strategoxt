AC_INIT(Makefile.in)
AM_INIT_AUTOMAKE(xt,0.7beta)

AC_REVISION($Id: configure.in,v 1.35 2001/03/12 14:30:02 mdejonge Exp $)

AC_ARG_WITH(pkginstalldir,
   [  --with-pkginstalldir    Specify location where softwere gets installed 
                          during \"make pkg\" ], PKG_INSTALL_DIR=$withval)

AC_ARG_WITH(xt,
   [  --with-xt               Use XT installation during \"make pkg\" ], PKG_XT=$withval, PKG_XT=${prefix})

AC_SUBST(PKG_INSTALL_DIR)
AC_SUBST(PKG_XT)

AC_OUTPUT(
	Makefile \
	VERSION \
        pre-checks/Makefile \
        integration-tests/Makefile \
	www/Makefile \
        www/xt-download/Makefile
)

dnl Configuration of sub-pacakages

AC_CONFIG_PKG(aterm,       --with-gcc --with-dbg --with-java)

AC_CONFIG_PKG(asfix,       --with-aterm=${PKG_XT})

AC_CONFIG_PKG(asc-support stratego, --with-aterm=${PKG_XT})

AC_CONFIG_PKG(sglr,        --with-aterm=${PKG_XT}
                           --with-asfix=${PKG_XT})

AC_CONFIG_PKG(pgen,        --with-aterm=${PKG_XT}
                           --with-asfix=${PKG_XT}
                           --with-sglr=${PKG_XT})

AC_CONFIG_PKG(gpp,         --with-asc-support=${PKG_XT}
                           --with-asource=${PKG_XT}
                           --with-aterm=${PKG_XT}
                           --with-asfix=${PKG_XT}
                           --with-sglr=${PKG_XT})

AC_CONFIG_PKG(gb,          --with-aterm=${PKG_XT}
                           --with-stratego=${PKG_XT}
                           --with-gt=${PKG_XT})

AC_CONFIG_PKG(gt,          --with-aterm=${PKG_XT}
                           --with-stratego=${PKG_XT}
                           --with-gb=${PKG_XT})

AC_CONFIG_PKG(graph-tools,)

AC_CONFIG_PKG(JJForester,  --with-xt=${PKG_XT})
