# Exit immediately if a command exits with a non-zero status.
set -e

XT=__XT__
GPP=__GPP__
GRAMMARRECOVERY=__GRAMMARRECOVERY__

PATH=${XT}/bin:${GPP}/bin:${GRAMMARRECOVERY}/bin:${PATH}
export PATH

YACCTESTS=data/c5.2.y

for yacc in ${YACCTESTS}
do
   yaccspec=`basename ${yacc} .y`
   parse -l yacc -i ${yacc} -I -o ${yaccspec}.atree
   yacc2sdf -i ${yaccspec}.atree -o ${yaccspec}.asdf
   sdf2text -a -i ${yaccspec}.asdf -o /dev/null
done
