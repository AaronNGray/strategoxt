# Exit immediately if a command exits with a non-zero status.
set -e

XT=__XT__

PATH=${XT}/bin:${PATH}
export PATH

GB=${XT}/share/gb
GBSRC=../gb/

YACCTESTS=${GBSRC}/grammars/yacc/data/c5.2.y

sglr=sglr
implodeasfix=implode-asfix
yacc2sdf=yacc2sdf
sdf2text=sdf2text


for yacc in ${YACCTESTS}
do
   yaccspec=`basename ${yacc} .y`
   ${sglr} -p ${GB}/yacc.tbl -i ${yacc} -o ${yaccspec}.tree
   ${implodeasfix} -i ${yaccspec}.tree -o ${yaccspec}.ayacc
   ${yacc2sdf} -i ${yaccspec}.ayacc -o ${yaccspec}.asdf
   ${sdf2text} -a -i ${yaccspec}.asdf -o /dev/null
done

