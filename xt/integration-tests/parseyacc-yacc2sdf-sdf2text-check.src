# Exit immediately if a command exits with a non-zero status.
set -e

XT=__XT__

PATH=${XT}/bin:${PATH}
export PATH

GB=${XT}/share/gb
GBSRC=../gb/

sglr=sglr
implodeasfix=implode-asfix
yacc2sdf=yacc2sdf
sdf2text=sdf2text


${sglr} -p ${GB}/yacc.tbl -i ${GBSRC}/spec/yacc/data/c5.1.y -o c5.1.tree
${implode-asfix} -i c5.1.tree -o c5.1.ayacc
${yacc2sdf} -i c5.1.ayacc -o c5.1.asdf
${sdf2text} -a -i c5.1.asdf -o c5.1.sdf

