# Exit immediately if a command exits with a non-zero status.
set -e

# Test parsing, and unparsing grammars.

XT=__XT__

PATH=${XT}/bin:${PATH}
GB=${XT}/share/gb

Sdf=${GB}/Sdf.cons
Pico=${GB}/Pico
ATerms=${GB}/ATerms
Grammars="${Pico} ${ATerms} ${Sdf}"

asfix_yield=asfix-yield
sglr=sglr

for Grammar in ${Grammars}
do
    echo "Testing grammar \"${Grammar}\"." >&2
    ${sglr} -p ${Sdf}.tbl -i ${Grammar}.sdf \
      | ${asfix_yield} \
      | ${sglr}sglr -p ${Sdf}.tbl > /dev/null
done
