# Exit immediately if a command exits with a non-zero status.
set -e

# Test parsing, and unparsing grammars.

XT=__XT__
ASFIXTOOLS=__ASFIXTOOLS__

PATH=${XT}/bin:${ASFIXTOOLS}/bin:${PATH}

Languages="pico aterms sdf"

for lang in ${Languages}
do
    grammar=`gbquery -d -l ${lang}` || exit 1
    echo "Testing grammar \"${lang}\"." >&2
    parse -l sdf -v 2.1 -i ${grammar} \
      | asfix-yield \
      | parse -l sdf -v 2.1 -o /dev/null || exit 1
done
