# Exit immediately if a command exits with a non-zero status.
set -e

# Test parsing, imploding and pretty-printing grammars.

XT=__XT__

PATH=${XT}/bin:${PATH}
export PATH

GRAMMARS=${XT}/share/gb

Sdf=${GRAMMARS}/Sdf.cons
Pico=${GRAMMARS}/Pico
ATerms=${GRAMMARS}/ATerms

Grammars="${Pico} ${ATerms} ${Sdf}"

sdf2text=sdf2text
sglr=sglr
implode_asfix=implode-asfix

for Grammar in ${Grammars}
do
    echo "Testing grammar \"${Grammar}\"." >&2
    ${sglr} -p ${Sdf}.tbl -i ${Grammar}.def \
      | ${implode_asfix} \
      | ${sdf2text} -a \
      | ${sglr} -p ${Sdf}.tbl > /dev/null
done
