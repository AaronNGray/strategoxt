module regexp-parenthesize
imports parenthesize regexp

signature
  constructors
    Bracket : RegExp(a) -> Regexp(a)

strategies

  regexp-parenthesize =
    parenthesize(!Bracket(<id>), regexp-priorities)

  regexp-priorities =
    ![ (Some("left"),  ["Star","Plus","Opt"])
     , (Some("right"), ["Seq"])
     , (Some("right"), ["Group"])
     , (Some("right"), ["Choice"])
     ]
