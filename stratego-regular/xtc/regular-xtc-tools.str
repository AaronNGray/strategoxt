module regular-xtc-tools
imports pp-rtg
strategies

  xtc-pp-abstract-stratego =
    xtc-transform(!"pp-stratego", !["--abstract" | <pass-verbose> ()])

  /**
   * @type FILE -> RTG
   */
  xtc-rtg-front-end =
    xtc-ensure-file
    ; ?FILE(<id>)
    ; parse-rtg-file
    ; rtg-reduce
    ; rtg-group-productions


  /**
   * @type RTG -> FILE
   */
  xtc-pp-rtg =
    where(f := <xtc-new-file>)
    ; pp-rtg-file(|f)
    ; !FILE(f)
