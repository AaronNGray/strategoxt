module rg-term
imports rg-identifier
exports
  sorts Term
  context-free syntax
    Id       -> Term {cons("Term")}
    "<conc>" -> Term {cons("ConcTerm")}
    "<cons>" -> Term {cons("ConsTerm")}
    "<nil>"  -> Term {cons("NilTerm")}
    "<(" IntConst ")>" -> Term {cons("Tuple")}

    "<some>" -> Term {cons("SomeTerm")}
    "<none>" -> Term {cons("NoneTerm")}

  lexical syntax
    [0-9]+   -> IntConst
